{
  "name": "eshop-jss-app",
  "version": "9.0.6",
  "description": "Application utilizing Sitecore JavaScript Services and Angular (angular-cli).",
  "config": {
    "appName": "eshop-jss-app",
    "rootPlaceholders": [
      "jss-main"
    ],
    "sitecoreDistPath": "/dist/eshop-jss-app",
    "sitecoreConfigPath": "/App_Config/Include/zzz",
    "buildArtifactsPath": "./dist",
    "graphQLEndpointPath": "/api/eshop-jss-app",
    "language": "en"
  },
  "scripts": {
    "ng": "ng",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "jss": "jss",
    "start": "npm-run-all --serial bootstrap:disconnected --parallel start:angular start:proxy start:watch-components",
    "start:connected": "scjss-verify-setup && npm-run-all --serial bootstrap:connected start:angular start:watch-components",
    "build": "npm-run-all --serial bootstrap:connected --parallel build:client build:server --serial build:server-wrapper",
    "scaffold": "ng generate @sitecore-jss/sitecore-jss-angular-schematics:jss-component",
    "start:angular": "ng serve -o --base-href=/",
    "start:proxy": "ts-node scripts/disconnected-mode-proxy.ts",
    "start:watch-components": "ts-node scripts/generate-component-factory.ts --watch",
    "build:client": "cross-env-shell ng build --configuration=production --deploy-url $npm_package_config_sitecoreDistPath/browser/ --output-path=$npm_package_config_buildArtifactsPath/browser/",
    "build:server": "cross-env-shell ng run eshop-jss-app:server --output-path=$npm_package_config_buildArtifactsPath/server --output-hashing=none",
    "build:server-wrapper": "cross-env-shell webpack --config webpack.server.config.js --progress --colors --output-path $npm_package_config_buildArtifactsPath",
    "bootstrap:connected": "ts-node scripts/bootstrap.ts",
    "bootstrap:disconnected": "ts-node scripts/bootstrap.ts --disconnected",
    "graphql:update": "ts-node ./scripts/update-graphql-fragment-data.ts"
  },
  "private": true,
  "author": {
    "name": "Sitecore Corporation",
    "url": "https://jss.sitecore.net"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sitecore/jss.git"
  },
  "bugs": {
    "url": "https://github.com/sitecore/jss/issues"
  },
  "homepage": "https://jss.sitecore.net",
  "license": "Apache-2.0",
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/platform-server": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@ngx-meta/core": "^6.0.0-rc.1",
    "@ngx-translate/core": "^10.0.2",
    "@ngx-translate/http-loader": "^3.0.1",
    "@sitecore-jss/sitecore-jss": "^9.0.5",
    "@sitecore-jss/sitecore-jss-angular": "^9.0.5",
    "apollo-angular": "^1.5.0",
    "apollo-angular-link-http-batch": "^1.4.0",
    "apollo-angular-link-persisted": "^1.1.0",
    "apollo-cache-inmemory": "^1.3.8",
    "apollo-client": "^2.4.5",
    "apollo-link": "^1.2.3",
    "bootstrap": "^4.1.1",
    "core-js": "^2.4.1",
    "graphql": "0.13.0",
    "graphql-tag": "^2.9.2",
    "lodash": "^4.17.10",
    "rxjs": "^6.2.1",
    "rxjs-compat": "^6.0.0-rc.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.6",
    "@angular/cli": "^6.1.0",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@sitecore-jss/sitecore-jss-angular-schematics": "^9.0.5",
    "@sitecore-jss/sitecore-jss-cli": "^9.0.6",
    "@sitecore-jss/sitecore-jss-dev-tools": "^9.0.6",
    "@sitecore-jss/sitecore-jss-manifest": "^9.0.5",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^8.10.17",
    "body-parser": "^1.18.2",
    "chalk": "^2.1.0",
    "codelyzer": "^4.0.2",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.0.5",
    "enhanced-resolve": "3.3.0",
    "express": "^4.16.2",
    "fs-extra": "^5.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.3",
    "protractor": "~5.1.2",
    "ts-loader": "^4.3.1",
    "ts-node": "^6.1.0",
    "tslint": "^5.7.0",
    "typescript": "2.8.4",
    "webpack-cli": "^3.0.2"
  }
}
